<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack">

    <ImageView
        android:id="@+id/foodtruck_editor_navigate_previous"
        android:layout_width="@dimen/foodtruck_editor_footer_navigation_button_size"
        android:layout_height="@dimen/foodtruck_editor_footer_navigation_button_size"
        android:layout_marginStart="@dimen/general_layout_margin"
        android:layout_marginLeft="@dimen/general_layout_margin"
        android:layout_marginTop="@dimen/general_layout_margin"
        android:layout_marginBottom="@dimen/general_layout_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_navigate_before_black_24dp"
        android:background="?selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/foodtruck_editor_navigate_next"
        android:layout_width="@dimen/foodtruck_editor_footer_navigation_button_size"
        android:layout_height="@dimen/foodtruck_editor_footer_navigation_button_size"
        android:layout_marginTop="@dimen/general_layout_margin"
        android:layout_marginEnd="@dimen/general_layout_margin"
        android:layout_marginRight="@dimen/general_layout_margin"
        android:layout_marginBottom="@dimen/general_layout_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_navigate_next_black_24dp"
        android:background="?selectableItemBackgroundBorderless"/>

    <com.radusalagean.quickdotsview.QuickDotsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodtruck_editor_quick_dots_view"
        android:layout_marginStart="@dimen/general_layout_margin"
        android:layout_marginLeft="@dimen/general_layout_margin"
        android:layout_marginTop="@dimen/general_layout_margin"
        android:layout_marginEnd="@dimen/general_layout_margin"
        android:layout_marginRight="@dimen/general_layout_margin"
        android:layout_marginBottom="@dimen/general_layout_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:dotSeparation="@dimen/quick_dots_view_dot_separation"
        app:dotRadius="@dimen/quick_dots_view_dot_radius"
        app:selectedDotColor="@color/colorAccent"
        app:unselectedDotColor="@color/colorWhite"/>

</androidx.constraintlayout.widget.ConstraintLayout>